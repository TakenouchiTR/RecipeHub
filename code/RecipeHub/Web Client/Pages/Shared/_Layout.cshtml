@using Shared_Resources.Data.UserData
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RecipeHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web_Client.styles.css" asp-append-version="true" />
</head>
<body>
<header>
    @if (!string.IsNullOrWhiteSpace(Session.Key))
    {
        <nav id="site-header">
            <div>
                <p>@Html.Raw(ViewData["Header"])</p>
            </div>
            <div id="primary-nav">
                <span class="text-primary"><a asp-page="/RecipeList">Home</a></span>
                <a asp-page="/PlannedMeals">Planned Meals</a>
                <a asp-page="/Ingredients">Ingredients</a>
            </div>
            <div id="logout-text">
                <p><a asp-page="/Index">Logout</a></p>
            </div>
        </nav>
    }
</header>
    <div class="buffer"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - RecipeHub - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>